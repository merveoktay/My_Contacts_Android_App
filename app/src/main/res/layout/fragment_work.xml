<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.work.WorkFragment">

    <EditText
        android:id="@+id/editTextWorkSearch"
        android:layout_width="248dp"
        android:layout_height="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@string/search"
        android:ems="10"
        android:hint="@string/search"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewWork"
        android:layout_width="370dp"
        android:layout_height="477dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextWorkSearch"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/work_color"
        android:text="SEARCH"
        android:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/editTextWorkSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextWorkSearch"
        app:layout_constraintTop_toTopOf="@+id/editTextWorkSearch"
        app:rippleColor="@color/work_color" />

</androidx.constraintlayout.widget.ConstraintLayout>